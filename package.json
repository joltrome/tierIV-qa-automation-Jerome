{
  "name": "tier4-qa-automation-challenge",
  "version": "1.0.0",
  "description": "QA Automation Project for Tier IV - Automated UI testing of tier4.jp website using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:report": "npx playwright show-report",
    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit",
    "test:homepage": "npx playwright test tests/homepage.spec.ts",
    "test:language": "npx playwright test tests/language-switcher.spec.ts",
    "test:footer": "npx playwright test tests/footer.spec.ts"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "qa",
    "tier4",
    "e2e"
  ],
  "author": "Jerome Nicholaz",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}